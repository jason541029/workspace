package edu.fju.exam;

public class Bubble {
	public static void main(String[] args) {
		int n[] = {45, 81, 9, 72, 4, 6};
		
		for (int i=0; i<n.length-1;i++){
			for (int j=i+1;j<n.length; j++){
				if(n[i]<n[j]){
					int tmp =n[i];
					
					n[i] = n[j];
					n[j] = tmp;
				}
			}
			for(int num : n )
				System.out.print(num+" ");
		}
			int b []={ 6, 5, 2, 8, 1, 9, 13, 4, 11, 7};
			for (int o=0; o<b.length-1;o++){
				for (int p=o+1;p<b.length; p++){
					if(b[o]<b[p]){
						int tmp =b[o];
						
						b[o] = b[p];
						b[p] = tmp;
	}
	
		}
				for(int num : b )
					System.out.print(num+" ");
	}
		}
	}
	
